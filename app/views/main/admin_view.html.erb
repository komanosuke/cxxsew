<main>

    <div class="brand-theme">Anti Nihilism Fashion Brand</div>
    <div id="flash"><%= flash[:notice] %></div>

    <div id="contents">
        <div class="article">
            <div class="bg-rects">
                <div class="bg-rect"></div>
                <div class="bg-rect"></div>
                <div class="bg-rect"></div>
                <div class="bg-rect"></div>
                <div class="bg-rect"></div>
            </div>
        </div>
        <% case @view %>
        <% when 'user' %>
            <%= render partial: "shared/view/user" %>
        <% when 'work' %>
            <%= render partial: "shared/view/work" %>
        <% when 'work_cat' %>
            <%= render partial: "shared/view/work_cat" %>
        <% when 'article' %>
            <%= render partial: "shared/view/article" %>
        <% when 'article_cat' %>
            <%= render partial: "shared/view/article_cat" %>
        <% when 'news' %>
            <%= render partial: "shared/view/news" %>
        <% when 'news_cat' %>
            <%= render partial: "shared/view/news_cat" %>
        <% end %>
        
    </div>

    <%= image_tag "/image/mid_main4.png", class:"footer-img", alt:"" %>
</main>
<%= javascript_pack_tag 'view' %>